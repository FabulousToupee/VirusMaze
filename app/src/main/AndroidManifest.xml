<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dam_45133.virusmaze">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/virusmaze_ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/virusmaze_ic_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".Activities.ScoresActivity"
            android:label="@string/score"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.GameOverActivity"
            android:label="@string/gameOver"
